# Variables d'environnement pour DATLIGENT Infrastructure
# IMPORTANT: Ne pas committer ce fichier avec des vraies valeurs en production !

# Configuration générale
COMPOSE_PROJECT_NAME=datligent
DOMAIN=servops.datligent.fr
EMAIL=contact@datligent.fr

# Configuration Traefik
TRAEFIK_DASHBOARD_USER=admin
TRAEFIK_DASHBOARD_PASSWORD=datligent2025

# Configuration SSL/TLS
ACME_EMAIL=contact@datligent.fr

# Configuration Cloudflare (optionnel pour DNS challenge)
# CF_API_EMAIL=your-email@example.com
# CF_DNS_API_TOKEN=your-cloudflare-api-token

# Configuration Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=datligent2025

# Configuration InfluxDB
INFLUXDB_ADMIN_USER=admin
INFLUXDB_ADMIN_PASSWORD=datligent2025
INFLUXDB_ORG=datligent
INFLUXDB_BUCKET=website-metrics

# Configuration réseau
DOCKER_NETWORK=datligent-network
SUBNET=172.20.0.0/16

# Configuration de sauvegarde
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Mode de développement (true/false)
DEBUG=false